<body>
  <%= render "layouts/header" %>
  <div class="w3ls_w3l_banner_nav_right_grid w3ls_w3l_banner_nav_right_grid_popular">
    <div class="container">
      <div class="agileinfo_single">
        <h5><%= @product.name %></h5>
        <div class="col-md-4 agileinfo_single_left">
          <%= image_tag(@product.main_image, class: "img-responsive", id: "main-image")%>
          <% @product.product_images.each do |productImage| -%>
            <div class="col-md-4 col-sm-12 col-xs-12 ",style="margin-top: 15px;">
              <div class="card-img">
                <%= image_tag(productImage.link, class: "img-responsive list-product-detail", data: {image: productImage.link})%>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-8 agileinfo_single_right">
          <div class="w3agile_description">
            <h4><%= t ".description" %></h4>
            <%= @product.short_desc%>
          </div>
          <div class="w3agile_description">
            <h4><%= t ".author" %></h4>
            <%= @product.authors.first.name %>
          </div>
          <div class="snipcart-item block">
            <div class="snipcart-thumb agileinfo_single_right_snipcart">
              <h4><% @product.price %> <span></span></h4>
            </div>
            <div class="snipcart-details agileinfo_single_right_details">
              <button class="btn btn-primary add-to-cart" style= "margin-top: 30px" ><%= t ".add_to_cart"%></button>
            </div>
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
</body>
